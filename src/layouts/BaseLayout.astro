---
import '../styles/global.css';
import LanguageSwitcher from '../components/LanguageSwitcher.astro';
import { localePath, preferredLocaleFromAcceptLanguage, type Locale } from '../lib/i18n';

interface Props {
  title: string;
  description?: string;
  ogImage?: string;
}

const {
  title,
  description = 'DataSaaSLab: Data Engineering, SaaS building, and applied AI notes.',
  ogImage = '/og.png',
} = Astro.props;
const pathname = Astro.url.pathname;

const pathLocaleMatch = pathname.match(/^\/(fr|en)(\/|$)/);
const localeFromPath = pathLocaleMatch?.[1] as Locale | undefined;
const localeFromHeader = preferredLocaleFromAcceptLanguage(Astro.request.headers.get('accept-language'));
const currentLocale = localeFromPath ?? localeFromHeader ?? 'fr';
const isLocalizedPath = Boolean(localeFromPath);

const homeHref = localePath(currentLocale, '/');
const blogHref = localePath(currentLocale, '/blog');
const tipsHref = localePath(currentLocale, '/tips');

const navLabels =
  currentLocale === 'fr'
    ? { home: 'Accueil', blog: 'Blog', tips: 'Astuces' }
    : { home: 'Home', blog: 'Blog', tips: 'Tips' };

const canonicalPath = isLocalizedPath ? pathname : localePath(currentLocale, pathname);
const siteUrl = 'https://datasaaslab.dev';
const canonicalUrl = new URL(canonicalPath, siteUrl).toString();
const ogImageUrl = new URL(ogImage, siteUrl).toString();
---

<!doctype html>
<html lang={currentLocale}>
  <head>
    <meta charset="utf-8" />
    <link rel="icon" type="image/png" href="/favicon.png" />
    <link rel="apple-touch-icon" href="/favicon.png" />
    <meta name="viewport" content="width=device-width" />
    <meta name="generator" content={Astro.generator} />
    <meta name="theme-color" content="#0b0f19" />
    <meta name="description" content={description} />
    <meta property="og:site_name" content="DataSaaSLab" />
    <meta property="og:type" content="website" />
    <meta property="og:title" content={title} />
    <meta property="og:description" content={description} />
    <meta property="og:url" content={canonicalUrl} />
    <meta property="og:image" content={ogImageUrl} />
    <meta name="twitter:card" content="summary_large_image" />
    <meta name="twitter:title" content={title} />
    <meta name="twitter:description" content={description} />
    <meta name="twitter:image" content={ogImageUrl} />
    <title>{title}</title>
    <slot name="head" />
  </head>
  <body>
    <header class="site-header">
      <div class="container">
        <a class="brand" href={homeHref}>DataSaaSLab</a>
        <nav aria-label="Primary">
          <a href={homeHref}>{navLabels.home}</a>
          <a href={blogHref}>{navLabels.blog}</a>
          <a href={tipsHref}>{navLabels.tips}</a>
          <LanguageSwitcher />
        </nav>
      </div>
    </header>

    <main class="container">
      <slot />
    </main>

    <footer class="site-footer">
      <div class="container footer-content">
        <a href="https://github.com/Simoncjl" target="_blank" rel="noopener noreferrer">GitHub: Simoncjl</a>
        <a href="https://datasaaslab.dev" target="_blank" rel="noopener noreferrer">
          datasaaslab.dev
        </a>
        <p>Opinions are my own.</p>
      </div>
    </footer>
  </body>
</html>
