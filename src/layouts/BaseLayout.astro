---
import '../styles/global.css';
import LanguageSwitcher from '../components/LanguageSwitcher.astro';
import { localeFromPathname, localePath } from '../lib/i18n';

interface Props {
  title: string;
}

const { title } = Astro.props;
const pathname = Astro.url.pathname;
const currentLocale = localeFromPathname(pathname);
const homeHref = pathname === '/' ? '/' : localePath(currentLocale, '/');
const blogHref = localePath(currentLocale, '/blog');
---

<!doctype html>
<html lang={currentLocale}>
  <head>
    <meta charset="utf-8" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <link rel="icon" href="/favicon.ico" />
    <meta name="viewport" content="width=device-width" />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
    <slot name="head" />
  </head>
  <body>
    <header class="site-header">
      <div class="container">
        <a class="brand" href={homeHref}>DataSaaSLab</a>
        <nav aria-label="Primary">
          <a href={homeHref}>Home</a>
          <a href={blogHref}>Blog</a>
          <LanguageSwitcher />
        </nav>
      </div>
    </header>

    <main class="container">
      <slot />
    </main>

    <footer class="site-footer">
      <div class="container footer-content">
        <a href="https://github.com/Simoncjl" target="_blank" rel="noopener noreferrer">GitHub: Simoncjl</a>
        <a href="https://datasaaslab-blog.pages.dev" target="_blank" rel="noopener noreferrer">
          datasaaslab-blog.pages.dev
        </a>
        <p>Opinions are my own.</p>
      </div>
    </footer>
  </body>
</html>
